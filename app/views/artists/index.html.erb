<h1>Artists</h1>

<ul>
  <% @artists.each do |artist| %>
    <li> <%=link_to artist.name, artist_path(artist)%>
      (<%= artist.song_count %> <%= "song".pluralize(artist.song_count) %>)
   </li>
    <ul>
      <% artist.songs.each do |artist_song| %>
        <li> <%=link_to artist_song.title, song_path(artist_song)%> </li>
      <% end %>
    </ul>
  <% end %>
</ul>
